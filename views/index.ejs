<%- include("partials/header.ejs") %>

<h2>
  <%= day %>, <%= month %> <%= new Date().getDate() %>
</h2>

<div class="form">
  <form action="/" class="item" method="POST">
    <input type="text" name="newItem" placeholder="New Item">
    <button type="submit" name = "list" > + </button>
  </form>
</div>

<div class="list">
  <% for(let item of locals.todoList) { %>
    <p>
      <input type="checkbox">
      <label for="<%= item %>"><%= item %></label> <!-- strike through text if checkbox is clicked -->
  <% } %>
</div>


<%- include("partials/footer.ejs") %>